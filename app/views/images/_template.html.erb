<div class="back">
<%= link_to 'Back', :back %>
</div>

<% @images.each do |post| %>
<center>
    <%= link_to (image_tag post.i.url(:medium)), image_path(post) %>
  
    <div class="caption">
    <%= post.caption %>
    </div>
  
  
    <% if user_signed_in? and current_user.admin%>
      <%= link_to "Delete", image_path(post), class: "btn btn-danger", data: {:confirm => "Are you sure?"}, method: :delete %>
      <%= link_to "Edit Post", edit_image_path(post) %>
    <%end %>
  
 </center>
<% end %>